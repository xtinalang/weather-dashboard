[flake8]
max-line-length = 88
extend-ignore = E203
exclude =
    .git,
    .venv,
    __pycache__,
    dist,
    build,
    .pytest_cache,
    .mypy_cache,
    .ruff_cache,
    Experimental,
    node_modules,
    .uv

[dependency-groups]
dev = [
    # ... existing dependencies ...
    "freezegun>=1.2.2",
]
